<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PWanderMapper">
    
    <resultMap type="PWander" id="PWanderResult">
        <result property="wanderId"    column="wander_id"    />
        <result property="imagePath"    column="image_path"    />
        <result property="reportDesc"    column="report_desc"    />
        <result property="userName"    column="user_name"    />
        <result property="reportTime"    column="report_time"    />
        <result property="status"    column="status"    />
        <result property="phonenumber"    column="phonenumber"    />
        <result property="discoveryLocation"    column="discovery_location"    />
        <result property="petId"    column="pet_id"    />
    </resultMap>

    <sql id="selectPWanderVo">
        select wander_id, image_path, report_desc, user_name, report_time, status, phonenumber, discovery_location, pet_id from p_wander
    </sql>

    <select id="selectPWanderList" parameterType="PWander" resultMap="PWanderResult">
        <include refid="selectPWanderVo"/>
        <where>  
            <if test="reportTime != null "> and report_time = #{reportTime}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="discoveryLocation != null  and discoveryLocation != ''"> and discovery_location like concat('%', #{discoveryLocation}, '%')</if>
            <if test="petId != null "> and pet_id = #{petId}</if>
        </where>
    </select>
    
    <select id="selectPWanderByWanderId" parameterType="Long" resultMap="PWanderResult">
        <include refid="selectPWanderVo"/>
        where wander_id = #{wanderId}
    </select>

    <insert id="insertPWander" parameterType="PWander" useGeneratedKeys="true" keyProperty="wanderId">
        insert into p_wander
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="imagePath != null">image_path,</if>
            <if test="reportDesc != null and reportDesc != ''">report_desc,</if>
            <if test="userName != null">user_name,</if>
            <if test="reportTime != null">report_time,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="phonenumber != null">phonenumber,</if>
            <if test="discoveryLocation != null and discoveryLocation != ''">discovery_location,</if>
            <if test="petId != null">pet_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="imagePath != null">#{imagePath},</if>
            <if test="reportDesc != null and reportDesc != ''">#{reportDesc},</if>
            <if test="userName != null">#{userName},</if>
            <if test="reportTime != null">#{reportTime},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="phonenumber != null">#{phonenumber},</if>
            <if test="discoveryLocation != null and discoveryLocation != ''">#{discoveryLocation},</if>
            <if test="petId != null">#{petId},</if>
         </trim>
    </insert>

    <update id="updatePWander" parameterType="PWander">
        update p_wander
        <trim prefix="SET" suffixOverrides=",">
            <if test="imagePath != null">image_path = #{imagePath},</if>
            <if test="reportDesc != null and reportDesc != ''">report_desc = #{reportDesc},</if>
            <if test="userName != null">user_name = #{userName},</if>
            <if test="reportTime != null">report_time = #{reportTime},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="phonenumber != null">phonenumber = #{phonenumber},</if>
            <if test="discoveryLocation != null and discoveryLocation != ''">discovery_location = #{discoveryLocation},</if>
            <if test="petId != null">pet_id = #{petId},</if>
        </trim>
        where wander_id = #{wanderId}
    </update>

    <delete id="deletePWanderByWanderId" parameterType="Long">
        delete from p_wander where wander_id = #{wanderId}
    </delete>

    <delete id="deletePWanderByWanderIds" parameterType="String">
        delete from p_wander where wander_id in 
        <foreach item="wanderId" collection="array" open="(" separator="," close=")">
            #{wanderId}
        </foreach>
    </delete>
</mapper>