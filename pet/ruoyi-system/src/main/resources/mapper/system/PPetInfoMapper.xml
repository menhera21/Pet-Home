<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PPetInfoMapper">
    
    <resultMap type="PPetInfo" id="PPetInfoResult">
        <result property="petId"    column="pet_id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="gender"    column="gender"    />
        <result property="age"    column="age"    />
        <result property="status"    column="status"    />
        <result property="imageUrl"    column="image_url"    />
        <result property="description"    column="description"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectPPetInfoVo">
        select pet_id, name, type, gender, age, status, image_url, description, create_time from p_pet_info
    </sql>

    <select id="selectPPetInfoList" parameterType="PPetInfo" resultMap="PPetInfoResult">
        <include refid="selectPPetInfoVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="gender != null  and gender != ''"> and gender = #{gender}</if>
            <if test="age != null "> and age = #{age}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPPetInfoByPetId" parameterType="Long" resultMap="PPetInfoResult">
        <include refid="selectPPetInfoVo"/>
        where pet_id = #{petId}
    </select>

    <insert id="insertPPetInfo" parameterType="PPetInfo" useGeneratedKeys="true" keyProperty="petId">
        insert into p_pet_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="gender != null and gender != ''">gender,</if>
            <if test="age != null">age,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="imageUrl != null">image_url,</if>
            <if test="description != null">description,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="gender != null and gender != ''">#{gender},</if>
            <if test="age != null">#{age},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="imageUrl != null">#{imageUrl},</if>
            <if test="description != null">#{description},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePPetInfo" parameterType="PPetInfo">
        update p_pet_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="gender != null and gender != ''">gender = #{gender},</if>
            <if test="age != null">age = #{age},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="imageUrl != null">image_url = #{imageUrl},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where pet_id = #{petId}
    </update>

    <delete id="deletePPetInfoByPetId" parameterType="Long">
        delete from p_pet_info where pet_id = #{petId}
    </delete>

    <delete id="deletePPetInfoByPetIds" parameterType="String">
        delete from p_pet_info where pet_id in 
        <foreach item="petId" collection="array" open="(" separator="," close=")">
            #{petId}
        </foreach>
    </delete>
</mapper>