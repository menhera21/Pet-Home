<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PSuppliesMapper">
    
    <resultMap type="PSupplies" id="PSuppliesResult">
        <result property="supplyId"    column="supply_id"    />
        <result property="imagePath"    column="image_path"    />
        <result property="price"    column="price"    />
        <result property="stock"    column="stock"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectPSuppliesVo">
        select supply_id, image_path, price, stock, name from p_supplies
    </sql>

    <select id="selectPSuppliesList" parameterType="PSupplies" resultMap="PSuppliesResult">
        <include refid="selectPSuppliesVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectPSuppliesBySupplyId" parameterType="Long" resultMap="PSuppliesResult">
        <include refid="selectPSuppliesVo"/>
        where supply_id = #{supplyId}
    </select>

    <insert id="insertPSupplies" parameterType="PSupplies" useGeneratedKeys="true" keyProperty="supplyId">
        insert into p_supplies
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="imagePath != null and imagePath != ''">image_path,</if>
            <if test="price != null">price,</if>
            <if test="stock != null and stock != ''">stock,</if>
            <if test="name != null and name != ''">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="imagePath != null and imagePath != ''">#{imagePath},</if>
            <if test="price != null">#{price},</if>
            <if test="stock != null and stock != ''">#{stock},</if>
            <if test="name != null and name != ''">#{name},</if>
         </trim>
    </insert>

    <update id="updatePSupplies" parameterType="PSupplies">
        update p_supplies
        <trim prefix="SET" suffixOverrides=",">
            <if test="imagePath != null and imagePath != ''">image_path = #{imagePath},</if>
            <if test="price != null">price = #{price},</if>
            <if test="stock != null and stock != ''">stock = #{stock},</if>
            <if test="name != null and name != ''">name = #{name},</if>
        </trim>
        where supply_id = #{supplyId}
    </update>

    <delete id="deletePSuppliesBySupplyId" parameterType="Long">
        delete from p_supplies where supply_id = #{supplyId}
    </delete>

    <delete id="deletePSuppliesBySupplyIds" parameterType="String">
        delete from p_supplies where supply_id in 
        <foreach item="supplyId" collection="array" open="(" separator="," close=")">
            #{supplyId}
        </foreach>
    </delete>
</mapper>