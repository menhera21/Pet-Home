<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PRoomInfoMapper">
    
    <resultMap type="PRoomInfo" id="PRoomInfoResult">
        <result property="roomId"    column="room_id"    />
        <result property="roomNumber"    column="room_number"    />
        <result property="capacity"    column="capacity"    />
        <result property="currentPets"    column="current_pets"    />
    </resultMap>

    <sql id="selectPRoomInfoVo">
        select room_id, room_number, capacity, current_pets from p_room_info
    </sql>

    <select id="selectPRoomInfoList" parameterType="PRoomInfo" resultMap="PRoomInfoResult">
        <include refid="selectPRoomInfoVo"/>
        <where>  
            <if test="roomNumber != null  and roomNumber != ''"> and room_number = #{roomNumber}</if>
        </where>
    </select>
    
    <select id="selectPRoomInfoByRoomId" parameterType="Long" resultMap="PRoomInfoResult">
        <include refid="selectPRoomInfoVo"/>
        where room_id = #{roomId}
    </select>

    <insert id="insertPRoomInfo" parameterType="PRoomInfo" useGeneratedKeys="true" keyProperty="roomId">
        insert into p_room_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roomNumber != null and roomNumber != ''">room_number,</if>
            <if test="capacity != null">capacity,</if>
            <if test="currentPets != null">current_pets,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roomNumber != null and roomNumber != ''">#{roomNumber},</if>
            <if test="capacity != null">#{capacity},</if>
            <if test="currentPets != null">#{currentPets},</if>
         </trim>
    </insert>

    <update id="updatePRoomInfo" parameterType="PRoomInfo">
        update p_room_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="roomNumber != null and roomNumber != ''">room_number = #{roomNumber},</if>
            <if test="capacity != null">capacity = #{capacity},</if>
            <if test="currentPets != null">current_pets = #{currentPets},</if>
        </trim>
        where room_id = #{roomId}
    </update>

    <delete id="deletePRoomInfoByRoomId" parameterType="Long">
        delete from p_room_info where room_id = #{roomId}
    </delete>

    <delete id="deletePRoomInfoByRoomIds" parameterType="String">
        delete from p_room_info where room_id in 
        <foreach item="roomId" collection="array" open="(" separator="," close=")">
            #{roomId}
        </foreach>
    </delete>
</mapper>