<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PNoticeMapper">
    
    <resultMap type="PNotice" id="PNoticeResult">
        <result property="noticeId"    column="notice_id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectPNoticeVo">
        select notice_id, title, content, create_time from p_notice
    </sql>

    <select id="selectPNoticeList" parameterType="PNotice" resultMap="PNoticeResult">
        <include refid="selectPNoticeVo"/>
        <where>  
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
        </where>
    </select>
    
    <select id="selectPNoticeByNoticeId" parameterType="Long" resultMap="PNoticeResult">
        <include refid="selectPNoticeVo"/>
        where notice_id = #{noticeId}
    </select>

    <insert id="insertPNotice" parameterType="PNotice" useGeneratedKeys="true" keyProperty="noticeId">
        insert into p_notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePNotice" parameterType="PNotice">
        update p_notice
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where notice_id = #{noticeId}
    </update>

    <delete id="deletePNoticeByNoticeId" parameterType="Long">
        delete from p_notice where notice_id = #{noticeId}
    </delete>

    <delete id="deletePNoticeByNoticeIds" parameterType="String">
        delete from p_notice where notice_id in 
        <foreach item="noticeId" collection="array" open="(" separator="," close=")">
            #{noticeId}
        </foreach>
    </delete>
</mapper>